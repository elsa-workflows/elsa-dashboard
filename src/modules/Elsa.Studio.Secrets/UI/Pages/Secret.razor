@page "/secrets/{SecretId}"
@using Elsa.Secrets
@using Variant = MudBlazor.Variant
@inherits StudioComponentBase

<PageTitle>Secret</PageTitle>

<MudContainer MaxWidth="MaxWidth.False">
    <PageHeading Text="@($"Secret: {_model.Name}")"/>

    <MudCard>
        <MudForm Model="@_model"
                 @ref="@_form"
                 Validation="@((Func<SecretModel, bool>)(x => _validator.Validate(x).IsValid))"
                 ValidationDelay="0">

            <MudTabs Border="false" PanelClass="pa-6">
                <MudTabPanel Text="General">
                    <MudStack Spacing="8">
                        <MudTextField @bind-Value="_model.Name"
                                      For="@(() => _model.Name)"
                                      Immediate="true"
                                      Label="Name"
                                      Variant="Variant.Outlined"
                                      HelperText="The name of the secret."/>

                        <MudTextField @bind-Value="_model.Description"
                                      For="@(() => _model.Description)"
                                      Immediate="false"
                                      Label="Description"
                                      Variant="Variant.Outlined"
                                      HelperText="A description about the secret."/>

                        <MudTextField @bind-Value="_model.EncryptedValue"
                                      For="@(() => _model.EncryptedValue)"
                                      Immediate="false"
                                      Label="Value"
                                      Variant="Variant.Outlined"
                                      HelperText="The secret value."/>
                    </MudStack>
                </MudTabPanel>
            </MudTabs>
        </MudForm>
        <MudCardActions>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="@(async () => await OnSaveClicked())">Save</MudButton>
        </MudCardActions>
    </MudCard>
</MudContainer>