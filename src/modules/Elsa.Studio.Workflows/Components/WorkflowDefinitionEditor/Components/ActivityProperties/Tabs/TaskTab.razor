@using Variant = MudBlazor.Variant
@using Elsa.Api.Client.Extensions
@using Elsa.Studio.Workflows.Services
@inject LocalizationService _localizer
<MudForm>
    <MudStack Spacing="5">
        <MudField
            Variant="@Variant.Text"
            HelperText="@_localizer["When checked, the workflow will be executed asynchronously."]"
            Margin="Margin.None"
            Underline="true">
            <MudCheckBox
                T="bool?"
                Label="@_localizer["Run Asynchronously"]"
                Dense="@true"
                Value="@(Activity?.GetRunAsynchronously() == true)"
                ValueChanged="OnRunAsynchronouslyChanged"
                ReadOnly="IsReadOnly" Disabled="IsReadOnly"
                />
        </MudField>
    </MudStack>
</MudForm>