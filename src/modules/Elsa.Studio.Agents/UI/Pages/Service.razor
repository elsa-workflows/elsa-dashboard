@page "/ai/services/{ServiceId}"
@using Elsa.Agents
@using Variant = MudBlazor.Variant
@inherits StudioComponentBase
@using Elsa.Studio.Workflows.Services
@inject LocalizationService _localizer

<PageTitle>@_localizer["Service"]</PageTitle>

<MudContainer MaxWidth="MaxWidth.False">
    <PageHeading Text="@($"Service: {_entity.Name}")"/>

    <MudCard>
        <MudForm Model="@_entity"
                 @ref="@_form"
                 Validation="@((Func<ServiceInputModel, bool>)(x => _validator.Validate(x).IsValid))"
                 ValidationDelay="0">

            <MudTabs Border="false" PanelClass="pa-6">
                <MudTabPanel Text="@_localizer["General"]">
                    <MudStack Spacing="8">
                        <MudTextField @bind-Value="_entity.Name"
                                      For="@(() => _entity.Name)"
                                      Immediate="true"
                                      Label="@_localizer["Name"]"
                                      Variant="Variant.Outlined"
                                      HelperText="@_localizer["The technical name of the service."]"/>

                        <MudSelect T="string" @bind-Value="_entity.Type"
                                   For="@(() => _entity.Type)"
                                   Immediate="false"
                                   Label="@_localizer["Type"]"
                                   Variant="Variant.Outlined"
                                   HelperText="@_localizer["The type of the service."]">
                            <MudSelectItem T="string" Value="@("OpenAIChatCompletion")">@_localizer["OpenAIChatCompletion"]</MudSelectItem>
                            <MudSelectItem T="string" Value="@("OpenAITextToImage")">@_localizer["OpenAITextToImage"]</MudSelectItem>
                        </MudSelect>

                        <MudTextField @bind-Value="_entity.Settings"
                                      For="@(() => _entity.Settings)"
                                      Immediate="false"
                                      Lines="10"
                                      Label="@_localizer["Settings"]"
                                      Variant="Variant.Outlined"
                                      Converter="GetSettingsConverter()"
                                      HelperText="@_localizer["The settings of the service in JSON format."]"/>
                        
                    </MudStack>
                </MudTabPanel>
            </MudTabs>
        </MudForm>
        <MudCardActions>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="@(async () => await OnSaveClicked())">@_localizer["Save"]</MudButton>
        </MudCardActions>
    </MudCard>
</MudContainer>